<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ml"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:padding="5dp"
        android:background="#263238"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_height="50dp"
            android:src="@drawable/share"/>



        <ImageView
            android:id="@+id/install"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/install"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:gravity="end"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                android:src="@drawable/coin"/>

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Scores"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/maths"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mathbg"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_the_corner"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/imageview_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/wu"/>

            <Button
                android:id="@+id/warmUp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="80"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                android:shadowDx="5"
                android:shadowDy="5"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:textStyle="bold"
                android:text="Warm up" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_the_corner"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/imageview_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/gamezone"/>

            <Button
                android:id="@+id/gameZone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="80"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:background="@android:color/transparent"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="Game zone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_the_corner"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/imageview_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/reasoning"/>

            <Button
                android:id="@+id/reasoning"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="80"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:shadowDx="5"
                android:shadowDy="5"
                android:textAlignment="textStart"
                android:shadowRadius="5"
                android:shadowColor="@color/black"
                android:textStyle="bold"
                android:text="Reasoning" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
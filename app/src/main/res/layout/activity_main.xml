<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ml"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:padding="5dp"
        android:background="#032A34"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_height="30dp"
            android:src="@drawable/my_account"/>

        <ImageView
            android:id="@+id/dashboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_height="30dp"
            android:src="@drawable/dashboard"/>

        <ImageView
            android:id="@+id/leaderboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_height="30dp"
            android:src="@drawable/leaderboard"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/maths"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="@drawable/mc"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_the_corner"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/imageview_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/wu"/>

            <Button
                android:id="@+id/warmUp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="80"
                android:textSize="25sp"
                android:background="@android:color/transparent"
                android:shadowDx="5"
                android:shadowDy="5"
                android:textColor="@color/white"
                android:textAlignment="viewStart"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:textStyle="bold"
                android:text="Warm up" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_the_corner"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/imageview_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/gamezone"/>

            <Button
                android:id="@+id/gameZone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="80"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:background="@android:color/transparent"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="Game zone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_the_corner"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/imageview_bg"
                android:layout_height="wrap_content"
                android:src="@drawable/reasoning"/>

            <Button
                android:id="@+id/reasoning"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="80"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:shadowDx="5"
                android:shadowDy="5"
                android:textAlignment="textStart"
                android:shadowRadius="5"
                android:shadowColor="@color/black"
                android:textStyle="bold"
                android:text="Reasoning" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>